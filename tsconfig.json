{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@godiet-ui/*": ["./src/libs/ui/components/*"],
      "@godiet-hooks/*": ["./src/hooks/*"],
      "@godiet-entities/*": ["./src/entities/*"],
      "@godiet-components/*": ["./src/components/*"],
      "@godiet-utils/*": ["./src/utils/*"],
      "@godiet-types/*": ["./src/types/*"],
    },

    /* Testing */
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
